@page "/"

@using Microsoft.AspNetCore.Components;
@inject NavigationManager navMan;

<PageTitle>Home</PageTitle>

<div class="mb-5">
    <FluentBreadcrumb>
        <FluentBreadcrumbItem Href="">
            <FluentIcon Value="@(new Icons.Regular.Size20.Apps())" Color="@Color.Neutral" Slot="start" />
            <FluentLabel Color="Color.Neutral">Home</FluentLabel>
            <FluentIcon Value="@(new Icons.Regular.Size16.ChevronDoubleRight())" Color="@Color.Neutral" Slot="separator" />
        </FluentBreadcrumbItem>
    </FluentBreadcrumb>
</div>

<h1>Hello, world!</h1>

Welcome to your new app.

<FluentButton Appearance="@Appearance.Accent" @onclick="_ => OnClick()">Click Me</FluentButton>

